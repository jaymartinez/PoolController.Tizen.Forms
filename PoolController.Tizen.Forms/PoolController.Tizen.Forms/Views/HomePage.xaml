<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoolController.Tizen.Forms.Views.HomePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HeightRequest="1000">
            <ListView x:Name="HomeItemsListview" ItemTapped="HomeItemsListview_ItemTapped" HorizontalOptions="StartAndExpand" Margin="0, 40, 0, 40">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" VerticalOptions="Fill" Padding="24">
                                <Button TextColor="{Binding BtnTextColor}" Text="{Binding Name}" BackgroundColor="{Binding BGColor}" />
                                <Label IsVisible="{Binding IsErrorLabelVisible}" Text="{Binding ErrorText}" TextColor="Red" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>