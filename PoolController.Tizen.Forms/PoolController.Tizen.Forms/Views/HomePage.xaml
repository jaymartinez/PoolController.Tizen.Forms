<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoolController.Tizen.Forms.Views.HomePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="0, 20, 0, 0">
            <ListView x:Name="HomeItemsListview" ItemSelected="OnItemSelected" HorizontalOptions="StartAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout HorizontalOptions="Fill">
                                <Button Command="{Binding ButtonTapCommand}" Text="{Binding Name}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>